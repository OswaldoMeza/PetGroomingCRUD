@model List<PetGrooming.Models.Species>


@{
    ViewBag.Title = "List";
}

<h2>List</h2>
<a class="button" href="/Species/Add">Add new Species</a>
@{ 
    foreach (var species in @Model) {

    <div>
        <span><a href="/Species/Show/@species.SpeciesID">@species.Name</a></span>
        <span><a href="/Species/Update/@species.SpeciesID">Update</a></span>

    </div>
    }
}